{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "target": "es6",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "include": [
        "./src/**/*",
        "app.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}