{
  "name": "sa-virtual-agent-middle-server",
  "version": "1.0.0",
  "description": "GraphQL middle server for the stand alone virtual agent",
  "main": "app.ts",
  "scripts": {
    "build:w": "npm run lint && tsc --w",
    "start": "npm run lint && ts-node -r dotenv/config app.ts",

    "start:prod": "node ./node_modules/dotenv/config && npx pm2 start pm2.yaml",

    "dev:w1": "npm run lint && tsc-watch --onSuccess \"node -r dotenv/config ./dist/app.js\"",
    "dev:w2": "npm run lint && ts-node-dev app.ts",
    "dev:w3": "npm run lint && nodemon --exec ts-node -r dotenv/config -- app.ts",
    "dev:debug": "npm run lint && node --inspect -r ts-node/register -r dotenv/config app.ts",
    "dev:wd": "npm run lint && ts-node-dev -r dotenv/config --inspect -- app.ts",

    "lint": "tslint --project .",

    "test:w": "jest --watch",
    "test": "jest",
    "test:c": "jest --coverage",

    "build": "grunt",
    "serve:dev": "grunt devrun",
    "serve:prod": "grunt prodrun"
  },
  "author": "Fujitsu Services Limited",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "express-session": "^1.16.1",
    "graphql": "^14.2.1",
    "jest": "^24.7.1",
    "lodash": "^4.17.11",
    "log4js": "^4.1.0",
    "pm2": "^3.5.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.0.2",
    "ts-jest": "^24.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/express-graphql": "^0.6.2",
    "@types/express-session": "^1.15.12",
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/request": "^2.48.1",
    "@types/request-promise": "^4.1.42",
    "@types/supertest": "^2.0.7",
    "@types/swagger-ui-express": "^3.0.0",
    "grunt": "^1.0.4",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-env": "^0.4.4",
    "grunt-run": "^0.8.1",
    "grunt-ts": "^6.0.0-beta.22",
    "nodemon": "^1.18.11",
    "ts-node": "^8.0.3",
    "ts-node-dev": "^1.0.0-pre.32",
    "tsc-watch": "^2.1.2",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2"
  }
}